html 
    head 
        title= "Formulario producto"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body(class="container") 

        h1(class="display-3 text-center")= "Ingrese Producto [Pug]"
        a(href="/view/productos" class="btn btn-primary my-3")= "Ver productos"

        form(id="formAddProduct")
            label(for="title" class="form-label")= "Nombre"
            input(class="form-control" name="title")
            label(for="price" class="form-label")= "Precio"
            input(type="number" name="price" class="form-control")
            label(for="thumbnail" class="form-label")= "Foto URL"
            input(name="thumbnail" class="form-control")
            input(class="btn btn-success my-3" type="submit" value="Enviar" )
        script(src="js/index.js") 