<h1 class="display-3 text-center">Vista de productos [Handlebars]</h1>

<a href="/" class="btn btn-primary my-3">Volver al formulario</a>

{{#if productos}}
<table class="table table-dark table-striped table-hover align-middle text-center">
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
    </tr>
    {{#each productos}}
    <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td>
            <img src={{this.thumbnail}} alt={{this.title}} class="img-fluid" />
        </td>
    </tr>
    {{/each}}
</table>
{{else}}
<p class="lead">No hay productos</p>
{{/if}}
