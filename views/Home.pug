html
    head
        title= "Vista de Productos"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body(class="container") 
        h1(class="display-3 text-center")= "Vista de Productos [Pug]"
        
        a(href="/" class="btn btn-primary my-3")= "Volver al formulario"
        
        if productos.length > 0
            table(class="table table-dark table-striped table-hover align-middle text-center") 
                tr 
                    th= "Nombre"
                    th= "Precio"
                    th= "Foto"
                each producto in productos
                    tr 
                        td=producto.title 
                        td=producto.price 
                        td 
                            img(src=producto.thumbnail alt=producto.title class="img-fluid")
        else 
            p(class="lead")= "No hay productos"